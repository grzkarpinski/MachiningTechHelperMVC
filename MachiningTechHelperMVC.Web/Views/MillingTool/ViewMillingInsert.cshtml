@model MachiningTechelperMVC.Application.ViewModels.MillingInsert.MillingInsertVm

@{
    ViewData["Title"] = "ViewMillingInsert";
}

<h1>Szczegóły płytki</h1>

<div>
    <dl class="row">

        <table class="table table-bordered">
            <tr>
                <td class="col-sm-2">Symbol:</td>
                <td class="col-sm-10">@Model.Designation</td>
            </tr>
            <tr>
                <td class="col-sm-2">Promień zaokrąglenia:</td>
                <td class="col-sm-10">@Model.Radius</td>
            </tr>
        </table>

        <div>
            <dt class="col-sm-2">Zakresy parametrów:</dt>
        </div>
        <dd class="col-sm-10">
            @if (Model.millingInsertParametersRanges != null && Model.millingInsertParametersRanges.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Gatunek</th>
                            <th>Materiał</th>
                            <th>Vc Min m/min</th>
                            <th>Vc Max m/min</th>
                            <th>Posuw na ostrze Min mm/z</th>
                            <th>Posuw na ostrze Max mm/z</th>
                            <th>Opis</th>
                            <th>Akcje</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var parameter in Model.millingInsertParametersRanges)
                        {
                            <tr>
                                <td>@parameter.GradeName</td>
                                <td>@parameter.Material</td>
                                <td>@parameter.CuttingSpeedMinimum</td>
                                <td>@parameter.CuttingSpeedMaximum</td>
                                <td>@parameter.FeedPerToothMinimum</td>
                                <td>@parameter.FeedPerToothMaximum</td>
                                <td>@parameter.Description</td>
                                <td>
                                    <a asp-action="DeleteMillingInsertParametersRange" asp-route-id="@parameter.Id" class="btn btn-danger">Usuń</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Brak dodanych parametrów</p>
            }
        </dd>
        <div>
            <a asp-action="AddMillingInsertParametersRange" asp-route-insertId="@Model.Id" class="btn btn-primary" style="width: 200px;">Dodaj zakres parametrów</a>
        </div>
        <div>
            <a asp-action="DeleteMillingInsert" asp-route-id="@Model.Id" class="btn btn-danger">Usuń płytkę</a>
        </div>
    </dl>
</div>
<div>
    <a asp-action="ViewMillingInserts">Wróc do listy</a>
</div>