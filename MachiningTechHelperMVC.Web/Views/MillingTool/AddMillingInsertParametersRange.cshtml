@model MachiningTechelperMVC.Application.ViewModels.MillingInsertParametersRange.MillingInsertParametersRangeVm

@{
    ViewData["Title"] = "AddMillingInsertParametersRange";
}

<h1>Dodaj zakres parametrów</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMillingInsertParametersRange">
            <div class="form-group">
                <input asp-for="MillingInsertId" type="hidden" />
            </div>

            <div class="form-group">
                <label asp-for="GradeName" class="control-label"></label>
                <input asp-for="GradeName" class="form-control" />
                <span asp-validation-for="GradeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material" class="control-label"></label>
                <input asp-for="Material" class="form-control" />
                <span asp-validation-for="Material" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuttingSpeedMinimum" class="control-label"></label>
                <input asp-for="CuttingSpeedMinimum" class="form-control" />
                <span asp-validation-for="CuttingSpeedMinimum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuttingSpeedMaximum" class="control-label"></label>
                <input asp-for="CuttingSpeedMaximum" class="form-control" />
                <span asp-validation-for="CuttingSpeedMaximum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedPerToothMinimum" class="control-label"></label>
                <input asp-for="FeedPerToothMinimum" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="FeedPerToothMinimum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeedPerToothMaximum" class="control-label"></label>
                <input asp-for="FeedPerToothMaximum" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="FeedPerToothMaximum" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

