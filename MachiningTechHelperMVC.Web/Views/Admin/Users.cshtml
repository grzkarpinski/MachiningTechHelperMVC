@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Users";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa użytkownika</th>
            <th>Email</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-primary">Szczegóły</a>
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-primary">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>

