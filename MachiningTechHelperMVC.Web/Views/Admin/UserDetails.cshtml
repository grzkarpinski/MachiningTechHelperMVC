@model MachiningTechelperMVC.Application.ViewModels.User.UserDetailsVm

<h1>@Model.User.UserName</h1>

<h2>Roles</h2>
<ul>
    @foreach (var role in Model.Roles)
    {
        <li>
            @role
            <form asp-action="RemoveRole" asp-route-id="@Model.User.Id" asp-route-role="@role" method="post" style="display:inline;">
                <button type="submit">Remove</button>
            </form>
        </li>
    }
</ul>

<h2>Assign New Role</h2>
<form asp-action="AssignRole" asp-route-id="@Model.User.Id">
    <select asp-for="SelectedRole" asp-items="new SelectList(Model.AllRoles)">
        <option value="">Select a role</option>
    </select>
    <button type="submit">Assign Role</button>
</form>

<a asp-action="Users" class="btn btn-primary">Back to Users</a>
